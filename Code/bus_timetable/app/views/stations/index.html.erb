<%= content_for(:title, 'Stations | Bus Timetable') %>

<div class="row">
    <h1>Stations</h1>

  <ul>
    <% @stations.sort_by! { |station| station.number } %>
    <% @stations.each do |station| %>
      <li>Station #<%= station.number.to_s %> | <%= link_to "Edit", edit_station_path(station), { method: 'get' } %> | <%= link_to "Delete", station_path(station), { confirm: 'You sure?', method: 'delete' } %></li>
    <% end %>
  </ul>

  <%= link_to "New station", new_station_path, { class: "button tiny"} %>
</div>
